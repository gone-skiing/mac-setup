# .bashrc

if [ -z "$ORIG_PATH" ]
then
   export ORIG_PATH="$PATH"
else
   export PATH="$ORIG_PATH"
fi

export PATH=~/bin:$PATH
export PATH=/usr/local/bin:$PATH

export EDITOR=vi

export PROMPT_COMMAND="echo -ne '\033]0;${USER}@${HOSTNAME}\007';$PROMPT_COMMAND"

export VIRTUAL_ENV_DISABLE_PROMPT="true"
source ~/python_env/bin/activate

export USE_SYSTEM_ANSIBLE=true
source ~/he/p4/dev/installer/env-setup

export DOCKER_HOST_IP={{ docker_host_ip }}

export PS1='
\u:\w $ '

export SRCDIR="$HOME/he/p4/dev/core/tm1"
export PATH="$SRCDIR/tools:$PATH"
export PATH="$SRCDIR/ant/ant_1.6.5/bin:$PATH"

alias tosrc='cd $SRCDIR'

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_144.jdk/Contents/Home
export PATH=$JAVA_HOME/bin:$PATH

export GROOVY_HOME=/usr/local/opt/groovysdk/libexec

export P4IGNORE="$HOME/.p4ignore"

alias sshac='ssh ansible-ctrl'
alias sshjm='ssh jenkins-master'
alias top4='cd ~/he/p4/dev'
alias todev='cd ~/dev'

if [[ -f ~/.bashrc_user_extensions ]] ; then
    . ~/.bashrc_user_extensions
fi
