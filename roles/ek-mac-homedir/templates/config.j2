---
# Eugene's overrides to mac-dev-playbook

configure_dotfiles: no
configure_sudoers: yes
configure_terminal: no
configure_osx: no

homebrew_upgrade_all_packages: yes
homebrew_cask_state: upgraded
homebrew_cask_greedy: yes

# Homebrew
homebrew_taps:
  - homebrew/core
  - homebrew/cask
  - homebrew/cask-versions

# Yarn will install global node, but we are using node versions installed with nvm
homebrew_installed_packages:
  - coreutils
  - git
  - gnu-sed
  - gnu-tar
  - gradle
  - groovysdk
  - maven@3.3
  - packer
  - protobuf
  - python
  - python3
  - sass/sass/sass
  - terraform
  - watchman
  - wget
  - yarn
  - zsh

homebrew_linked_packages:
  - python3

homebrew_cask_apps:
  - adobe-acrobat-reader
  - appcleaner
  - codeship/taps/jet
  - discord
  - docker
  - { name: "dropbox", state: "present" }
  - evernote
  - firefox
  - freemind
  - google-chrome
  - { name: "google-backup-and-sync", state: "present" }
  - { name: "grammarly", state: "present" }
  - hazel
  - intellij-idea
  - iterm2
  - java
  - java11
  - adoptopenjdk8
  - jollysfastvnc
  - keyboard-maestro
  - keycastr
  - launchbar
  - minikube
  - obs
  - omnidisksweeper
  - postman
  - slack
  - { name: "spotify", state: "present" }
  - vagrant
  - virtualbox

python_virtual_env: "/Users/{{ ansible_user_id }}/python_env27"

pip_packages:
  - name: ansible
    state: latest
  - name: jinja2
    state: latest
  - name: pip
    state: latest
  - name: requests
    state: latest
  - name: setuptools
    state: latest
  - name: urllib3
    state: latest
  - name: wheel
    state: latest
